<h1>Login</h1>

{{#if error}}
    <p><b>Error:</b> {{error}}</p>
{{/if}}

<form method="post" action="/login">
    <div>
        <label>Email</label>
        <input type="text" name="email" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>